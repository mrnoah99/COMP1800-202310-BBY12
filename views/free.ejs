<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Free Game Page</title>
    <link rel="stylesheet" href="/public/css/free.css">
  </head>
  <body>
    <nav>
        <div class="navbar-left">
          <img src="/public/img/menu.png" alt="메뉴" class="menu-icon">
        </div>
        <div class="navbar-center">
          <h1>Free Game</h1>
        </div>
        <div class="navbar-right">
          <img src="/public/img/setting.png" alt="설정" class="settings-icon">
        </div>
      </nav>
      
      <!-- Hamburger menu -->
      <div class="menu">
        <ul>
          <li><a href="#">menu1</a></li>
          <li><a href="#">menu2</a></li>
          <li><a href="#">menu3</a></li>
          <li><a href="#">menu4</a></li>
        </ul>
      </div>
      
      <!-- Options menu -->
      <div class="settings">
        <ul>
          <li><a href="#">setting1</a></li>
          <li><a href="#">setting2</a></li>
          <li><a href="#">setting3</a></li>
        </ul>
      </div>

      <div class="search-container">
        <input type="text" id="search" placeholder="Search Games...">
        <button id="searchBtn" class="search-icon">
          <img src="/public/img/search.png" alt="search">
        </button>
      </div>
      
        <div class="filter-container">
          <div class="filter-btn-container">
            <button class="filter" id="filterBtn">Filter</button>
            <div class="filter-menu-container" id="filterMenu">
              <ul>
                <li><a href="/html/free.html">Free Game</a></li>
                <li><a href="/html/popular.html">Popular Game</a></li>
                <li><a href="#">Low to high price</a></li>
                <li><a href="#">High to low pricey</a></li>
              </ul>
            </div>
          </div>
        </div>
        
        <div class="container">
          <% games.forEach((game, index) => { %>
            <div class="box">
              <img src="<%= game.image %>" alt="Game <%= index + 1 %>">
              <h2><%= game.name %></h2>
              <p>Genres (Video game): <%= game.genres %></p>
              <button onclick="location.href='<%= game.url %>';">Show Details</button>
            </div>
          <% }) %>
        </div>

      <script src="/public/js/free.js"></script>


      <footer>
        <div class="logo">
          <a href="main.html"><img src="/public/img/home.png" alt="homepafe"></a>
        </div>
      </footer>
      
  </body>
</html>