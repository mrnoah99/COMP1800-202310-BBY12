<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <title>Popular Game Page</title>
    <link rel="stylesheet" href="/css/popular.css">
  </head>
  <body>
    <%- include("templates/header") %>
    <!-- whatever you need to link -->
    <%- include("templates/navbar") %>

      <div class="search-container">
        <input type="text" placeholder="Search Games...">
      </div>
      <div class="filter-container">
        <button class="filter">Filter</button>
        <div class="filter-menu">
          <li><a href="/free">Free Game</a></li>
          <li><a href="/popular">Popular Game</a></li>
            <li><a href="#">Low and High Price</a></li>
            <li><a href="#">High and Low Price</a></li>
          </ul>
        </div>
      </div>
      <div class="container">
        <% games.forEach(function(game) { %> 
          <div class="box">
            <img src="<%= game.image %>" alt="Game">
            <h2><%= game.name %></h2>
            <p>Genres (Video game): <%= game.genres %></p>
            <a href="/games/<%= game.template %>">Learn More</a>
         
          </div>
        <% }); %>
      </div>
      
      
      
<script src="/js/popular.js"></script>
<%- include("templates/footer") %>
  </body>
</html>
