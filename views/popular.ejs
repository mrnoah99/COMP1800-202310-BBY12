<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>Profile Page</title>
    <link rel="stylesheet" href="/css/popular.css">
  </head>
  <body>
    <%- include("../views/templates/header", { title: "popular" }) %>

      <div class="search-container">
        <input type="text" placeholder="Search Games...">
      </div>
      <div class="filter-container">
        <button class="filter">Filter</button>
        <div class="filter-menu">
          <li><a href="/free">Free Game</a></li>
          <li><a href="/popular">Popular Game</a></li>
            <li><a href="#">Low and High Price</a></li>
            <li><a href="#">High and Low Price</a></li>
          </ul>
        </div>
      </div>
      <div class="container">
        <% games.forEach(game => { %>
            <div class="box">
              <img src="<%= game.image %>" alt="Game">
              <h2><%= game.name %></h2>
              <p>Genres (Video game): <%= game.genre %></p>
            </div>
        <% }); %>
      </div>
<script src="/public/js/popular.js"></script>
<%- include("../views/templates/footer", { title: "popular" }) %>
  </body>
</html>
